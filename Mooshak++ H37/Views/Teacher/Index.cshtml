@model IEnumerable<Mooshak___H37.Models.Viewmodels.TeacherCourseViewModel>
@{
    ViewBag.Title = "Teacher Homepage";
}

<h2>Teacher Homepage</h2>

<div id="due-assignments" class="right-portion">
    <table id="assignments" class="table table-hover">
        <thead>
            <tr>
                <th>Nr</th>
                <th>Name</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @{int rowNo = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Isactive)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
