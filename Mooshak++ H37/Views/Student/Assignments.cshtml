@model IEnumerable<Mooshak___H37.Models.Viewmodels.CourseViewModel>

@{
	ViewBag.Title = "Assignments";
}

<div class="clearfix">
	<div class="large-left-portion">
		@foreach (var item in Model)
		{
			<h2>@item.Name</h2>
			<table id="assignments-@item.Name" class="table table-hover">
				@{int rowNo = 0;}

				@foreach (var it in item.Assignments)
				{
					<tr>
						<td>@(rowNo += 1)</td>
						<td>@Html.ActionLink(it.Name, "ViewAssignment", new { id = it.ID })</td>
						<td>@it.DueDate</td>
					</tr>
				}
			</table>

		}
	</div>
</div>

