@model IEnumerable<Mooshak___H37.Models.Viewmodels.SubmissionsViewModel>

@{
    ViewBag.Title = "View Submissions";
}

<h2>My Submissions: </h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="clearfix">
	<div class="large-left-portion">
		<table class="table table-hover">
			<tr>
				@*<th>
						@Html.DisplayNameFor(model => model.MilestoneID)
					</th>*@
				<th>
					Milestone
				</th>
				<th>
					Allowed Submissions
				</th>
				<th>
					Grade
				</th>
				<th>
					Percentage
				</th>
				<th>
					Date Submitted
				</th>
				<th></th>
                <th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr style="@(item.FinalSolution == true ? "Background-color:rgb(81, 142, 255);" : "")">
					<td>
						@Html.DisplayFor(modelItem => item.Milestone.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Milestone.AllowedSubmissions)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Grade)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Milestone.Percentage) %
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DateSubmitted)
					</td>
					<td>
						@Html.ActionLink("Details", "ViewSubmission", new { submissionID = item.ID })
					</td>
					<td></td>
				</tr>
			}

		</table>

	</div>
</div>
<p>
    @Html.ActionLink("Go Back", "ViewAssignment", new { id = @ViewBag.AssignmentID })
</p>


