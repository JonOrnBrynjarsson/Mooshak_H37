@model Mooshak___H37.Models.Viewmodels.CourseViewModel
@{
	ViewBag.Title = "Create Course";
}


<link type="text/css" rel="stylesheet" href="~/Content/Admin.css">
<div class="page-header">
	<h1>Create Course <small>Admin</small></h1>
</div>
<div class="clearfix">



	@using (Html.BeginForm("CreateCourse", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()

		<div class="large-left-portion">

			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
				</div>
			</div>
			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(m => m.StartDate, new { @class = "col-md-2 control-label" })
				<div class="col-md-10 form-inline">
					@Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" })@Html.Raw("DD/MM/YY 00:00:00")
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Isactive, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.CheckBoxFor(m => m.Isactive, new { @class = "checkbox-inline" })
				</div>
			</div>

		</div>
		<div class="small-right-portion btn-group-vertical">
			<input type="submit" value="Create" class="btn btn-primary create-button" />
			@Html.ActionLink("Go Back", "ViewCourses", null, new { @class = "btn btn-primary create-button" })
		</div>
	}
</div>

