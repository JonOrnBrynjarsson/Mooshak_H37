@model IEnumerable<Mooshak___H37.Models.Viewmodels.CourseViewModel>

@{
	ViewBag.Title = "View Courses";
}

<div class="page-header">
	<h1>Courses <small>List</small></h1>
</div>


<div class="clearfix">
	<div class="large-left-portion">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Nr</th>
					<th>Course</th>
					<th>Users</th>
					<th>Active</th>
				</tr>
			</thead>
			<tbody>
				@{ int rowNo = 0;}
				@foreach (var item in Model)
				{
					<tr>
						<td>@(rowNo += 1)</td>
						<td>@item.Name</td>
						<td>
							@if (item.User == null)
							{
								@Html.Raw("0");
							}
							else
							{
								@Html.Raw(item.User.Count);
							}
						</td>
						<td>
							@if (item.Isactive == true)
							{
								@Html.Raw("Yes");
							}
							else
							{
								@Html.Raw("No");
							}
						</td>
						<td>@Html.ActionLink("Delete", "RemoveCourse", new { id = item.ID })</td>
						<td>@Html.ActionLink("Edit", "EditCourse", new { id = item.ID })</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="small-right-portion btn-group-vertical">
		<button class="btn btn-primary create-button" onclick="location.href='@Url.Action("CreateCourse", "Admin")'">Create Course</button>
		@Html.ActionLink("Go Back", "Index", null, new { @class = "btn btn-primary create-button" })
	</div>
</div>