<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mooshak++</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/UserLayout.css" rel="stylesheet" type="text/css">
	<link rel="shortcut icon" href="~/Images/Logo.png" />
</head>
<body>
    <div class="my_navbar navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <div class="my_icon">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Mooshak++", "Index", "Home", new { area = "" }, new { @class = "my_icon navbar-brand" })
                </div>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>
                        @Html.ActionLink("Courses", "ViewCourses", "Admin", null, new { @class = "btn btn-primary Blue_button" })
                    </li>

                    <li>
                        @Html.ActionLink("Users", "ViewUsers", "Admin", null, new { @class = "btn btn-primary Blue_button" })
                    </li>
                    <li>
                        <div class="dropdown">
                            <button class="Blue_button btn btn-primary dropdown-toggle Settnings" type="button" data-toggle="dropdown">
                                Settings
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Account Settnings", "ChangePassword", "Manage")</li>
                                <li>@Html.ActionLink("About", "About", "Admin")</li>
                                <li><hr/></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mooshak++</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>



</body>
</html>
